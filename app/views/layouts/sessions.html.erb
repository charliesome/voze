    <body ontouchstart="">
        <section class="sessions">
            <header>
                <h1><%= link_to 'VOZE', root_path %></h1>
            </header>
            <section>
                <%= yield %>
            </section>
        </section>
        <%= javascript_include_tag "application" %>
    </body>
</html>
